<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsListActivity">

    <Button
        android:id="@+id/btnBackChatMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@id/friends_gl2"
        app:layout_constraintStart_toStartOf="@id/friends_gl1"
        app:layout_constraintTop_toTopOf="@id/friends_hgl2"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ListView
        android:id="@+id/connectedListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/friends_hgl2"
        app:layout_constraintEnd_toEndOf="@id/friends_gl2"
        app:layout_constraintStart_toStartOf="@id/friends_gl1"
        app:layout_constraintTop_toTopOf="@+id/friends_hgl1">

    </ListView>

    <EditText
        android:id="@+id/editTextSearchFriend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:hint="Search friend..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@id/friends_hgl1"
        app:layout_constraintEnd_toEndOf="@id/friends_gl2"
        app:layout_constraintStart_toStartOf="@id/friends_gl1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/friends_gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/friends_gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/friends_hgl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/friends_hgl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>